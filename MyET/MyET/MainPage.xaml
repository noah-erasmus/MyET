<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyET.MainPage"
             BackgroundImageSource="bg">

    <StackLayout
        VerticalOptions="Center">
        <Label
            Text="Welcome to MyET!"
            TextColor="White"
            FontSize="30"
            HorizontalOptions="Center"
            Margin="0,0,0,90"></Label>
        <Image
            Source="alien_happy_green"
            WidthRequest="200"
            HeightRequest="200"
            Margin="0,0,0,70"></Image>
        <Label
            Text="Let's start by naming your alien."
            TextColor="White"
            FontSize="15"
            HorizontalOptions="Center"
            Margin="0,0,0,10"></Label>
        <Button
            WidthRequest="200"
            Text="Name alien"
            Clicked="NameAlienTapped"
            BackgroundColor="#41e47f"
            TextColor="White"
            HorizontalOptions="Center"></Button>
    </StackLayout>

</ContentPage>
