<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyET.NameAlien"
             BackgroundImageSource="bg">
    <ContentPage.Content>
        <StackLayout
            VerticalOptions="Center">
            <Image
                WidthRequest="200"
                HeightRequest="200"
                Source="alien_happy_green"
                Margin="0,0,0,70"></Image>
            <Label 
                Text="Name your alien buddy!"
                TextColor="White"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                FontAttributes="Bold"
                FontSize="30"
                Margin="0,0,0,70"/>
            <Entry 
                WidthRequest="300"
                Text="" 
                Placeholder="Prometheus" 
                x:Name="AlienNameInput"
                TextColor="White"
                PlaceholderColor="Gray"
                BackgroundColor="#1c212f"
                ></Entry>
            <Button
                WidthRequest="200"
                Text="Enter"
                Clicked="NameAlienTapped"
                BackgroundColor="#41e47f"
                TextColor="White"
                HorizontalOptions="Center"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>