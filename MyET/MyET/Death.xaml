<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyET.Death"
             BackgroundImageSource="bg">
    <ContentPage.Content>
        <StackLayout
            VerticalOptions="Center">
            
            <StackLayout
                HorizontalOptions="Center">
                <Label Text="Oh no! Your ET has died!"
                       HorizontalOptions="Center"
                       TextColor="White"
                       FontSize="25"
                       FontAttributes="Bold"/>
                <Image 
                    Source="rip"
                    WidthRequest="270"
                    HeightRequest="270"></Image>
                <Label Text="Flip the switch below to clone a new one."
                       HorizontalOptions="Center"
                       TextColor="White"
                       FontSize="20"
                       HorizontalTextAlignment="Center"
                       WidthRequest="250"/>
                
            </StackLayout>
            <Switch
                    x:Name="reviveSwitch"
                    HorizontalOptions="Center"
                    Toggled="reviveSwitch_Toggled"
                    Scale="2"
                    ThumbColor="#41e47f"
                    HeightRequest="50"></Switch>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>